<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tamm_alert_list" model="ir.ui.view">
        <field name="name">tamm.alert.list</field>
        <field name="model">tamm.alert</field>
        <field name="arch" type="xml">
            <list string="Alerts" decoration-danger="severity == 'critical'" 
                  decoration-warning="severity == 'high'" 
                  decoration-muted="resolved">
                <field name="timestamp"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="alert_type"/>
                <field name="severity" widget="badge" 
                       decoration-danger="severity == 'critical'"
                       decoration-warning="severity == 'high'"
                       decoration-info="severity == 'medium'"/>
                <field name="description"/>
                <field name="resolved" widget="boolean_toggle"/>
                <button name="action_resolve" string="Resolve" type="object" 
                        invisible="resolved" icon="fa-check"/>
            </list>
        </field>
    </record>

    <record id="view_tamm_alert_form" model="ir.ui.view">
        <field name="name">tamm.alert.form</field>
        <field name="model">tamm.alert</field>
        <field name="arch" type="xml">
            <form string="Alert" create="false">
                <header>
                    <button name="action_resolve" string="Resolve" type="object" 
                            invisible="resolved" class="btn-primary"/>
                    <button name="action_unresolve" string="Unresolve" type="object" 
                            invisible="not resolved"/>
                    <field name="resolved" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_resolve" type="object" class="oe_stat_button" 
                                icon="fa-check-circle" invisible="resolved">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Mark as</span>
                                <span class="o_stat_text">Resolved</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Resolved" bg_color="text-bg-success" 
                            invisible="not resolved"/>
                    <group>
                        <group>
                            <field name="vehicle_id"/>
                            <field name="driver_id"/>
                            <field name="timestamp"/>
                            <field name="alert_type"/>
                            <field name="severity"/>
                        </group>
                        <group>
                            <field name="latitude"/>
                            <field name="longitude"/>
                            <field name="location_address"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                    <group string="Resolution" invisible="not resolved">
                        <group>
                            <field name="resolved_date"/>
                            <field name="resolved_by"/>
                        </group>
                        <group>
                            <field name="resolution_notes" nolabel="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



    <record id="action_tamm_alert" model="ir.actions.act_window">
        <field name="name">Alerts</field>
        <field name="res_model">tamm.alert</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No alerts
            </p>
        </field>
    </record>
</odoo>
