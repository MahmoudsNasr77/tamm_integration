<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tamm_dashboard_kanban" model="ir.ui.view">
        <field name="name">tamm.dashboard.kanban</field>
        <field name="model">fleet.vehicle</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="name"/>
                <field name="license_plate"/>
                <field name="current_speed"/>
                <field name="last_location_update"/>
                <field name="total_distance"/>
                <field name="average_fuel_consumption"/>
                <field name="maintenance_due"/>
                <field name="open_alert_count"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="license_plate"/>
                                    </div>
                                </div>
                                <div class="o_dropdown_kanban dropdown">
                                    <a class="dropdown-toggle o-no-caret btn" role="button" 
                                       data-bs-toggle="dropdown" href="#" aria-label="Dropdown menu" 
                                       title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <a role="menuitem" type="object" name="sync_with_tamm" 
                                           class="dropdown-item">Sync Now</a>
                                        <a role="menuitem" type="object" name="action_view_tracking" 
                                           class="dropdown-item">View Tracking</a>
                                        <a role="menuitem" type="object" name="action_view_alerts" 
                                           class="dropdown-item">View Alerts</a>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-6">
                                        <span class="fa fa-tachometer"/> 
                                        <field name="current_speed"/> km/h
                                    </div>
                                    <div class="col-6">
                                        <span class="fa fa-road"/> 
                                        <field name="total_distance"/> km
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <span class="fa fa-tint"/> 
                                        <field name="average_fuel_consumption"/> L/100km
                                    </div>
                                    <div class="col-6">
                                        <t t-if="record.maintenance_due.raw_value">
                                            <span class="badge text-bg-warning">
                                                <i class="fa fa-wrench"/> Maintenance Due
                                            </span>
                                        </t>
                                    </div>
                                </div>
                                <div class="row mt-2" t-if="record.open_alert_count.raw_value &gt; 0">
                                    <div class="col-12">
                                        <span class="badge text-bg-danger">
                                            <i class="fa fa-bell"/> 
                                            <field name="open_alert_count"/> Alerts
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <small class="text-muted">
                                        Last update: <field name="last_location_update"/>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_tamm_dashboard" model="ir.actions.act_window">
        <field name="name">Fleet Dashboard</field>
        <field name="res_model">fleet.vehicle</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('tamm_vehicle_id', '!=', False)]</field>
        <field name="context">{'create': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No vehicles configured with Tamm
            </p>
            <p>
                Configure your vehicles with Tamm integration to see them here.
            </p>
        </field>
    </record>
</odoo>
