<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tamm_tracking_list" model="ir.ui.view">
        <field name="name">tamm.tracking.list</field>
        <field name="model">tamm.tracking</field>
        <field name="arch" type="xml">
            <list string="Vehicle Tracking" create="false">
                <field name="timestamp"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="latitude"/>
                <field name="longitude"/>
                <field name="speed"/>
                <field name="distance"/>
                <field name="engine_status" widget="badge"/>
                <field name="address"/>
            </list>
        </field>
    </record>

    <record id="view_tamm_tracking_form" model="ir.ui.view">
        <field name="name">tamm.tracking.form</field>
        <field name="model">tamm.tracking</field>
        <field name="arch" type="xml">
            <form string="Tracking Record" create="false" edit="false">
                <sheet>
                    <group>
                        <group>
                            <field name="vehicle_id"/>
                            <field name="driver_id"/>
                            <field name="timestamp"/>
                            <field name="engine_status"/>
                        </group>
                        <group>
                            <field name="latitude"/>
                            <field name="longitude"/>
                            <field name="speed"/>
                            <field name="heading"/>
                            <field name="altitude"/>
                            <field name="distance"/>
                        </group>
                    </group>
                    <group string="Location">
                        <field name="address" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tamm_tracking_search" model="ir.ui.view">
        <field name="name">tamm.tracking.search</field>
        <field name="model">tamm.tracking</field>
        <field name="arch" type="xml">
            <search string="Search Tracking">
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="timestamp"/>
                <filter name="today" string="Today" 
                        domain="[('timestamp', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00'))]"/>
                <filter name="this_week" string="This Week" 
                        domain="[('timestamp', '&gt;=', (context_today() - relativedelta(weeks=1)).strftime('%Y-%m-%d'))]"/>
                <filter name="engine_on" string="Engine On" 
                        domain="[('engine_status', '=', 'on')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_vehicle" string="Vehicle" context="{'group_by': 'vehicle_id'}"/>
                    <filter name="group_driver" string="Driver" context="{'group_by': 'driver_id'}"/>
                    <filter name="group_date" string="Date" context="{'group_by': 'timestamp:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_tamm_tracking" model="ir.actions.act_window">
        <field name="name">Vehicle Tracking</field>
        <field name="res_model">tamm.tracking</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No tracking data
            </p>
            <p>
                Vehicle tracking data will appear here after synchronization.
            </p>
        </field>
    </record>
</odoo>