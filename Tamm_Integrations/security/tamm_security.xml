<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_tamm" model="ir.module.category">
        <field name="name">Tamm Fleet Management</field>
        <field name="description">Tamm Fleet Management System</field>
        <field name="sequence">50</field>
    </record>

    <record id="group_tamm_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_tamm"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_tamm_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_tamm"/>
        <field name="implied_ids" eval="[(4, ref('group_tamm_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>